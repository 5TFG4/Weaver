# Ports (Development)
# -----------------------------------------------------------------------------
HOST_PORT_DEV=8000
DEBUG_PORT=5678
FRONTEND_PORT_DEV=3000
POSTGRES_PORT_DEV=5432

# -----------------------------------------------------------------------------
# Ports (Production)
# -----------------------------------------------------------------------------
HOST_PORT_PROD=8080
FRONTEND_PORT_PROD=80
POSTGRES_PORT_PROD=5433

# -----------------------------------------------------------------------------
# Database
# -----------------------------------------------------------------------------
POSTGRES_DB=weaverdb
POSTGRES_USER=weaver
